<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popmovies.fragments.TrailerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/trailer_RV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/trailer_list" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_message_display_trailer"
        style="@style/ErrorMessageDisplay" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator_trailer"
        style="@style/LoadingIndicator" />

</FrameLayout>
