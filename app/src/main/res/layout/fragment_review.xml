<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popmovies.fragments.ReviewFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/review_RV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/review_list" />

    <TextView
        android:id="@+id/tv_error_message_display_review"
        style="@style/ErrorMessageDisplay" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator_review"
        style="@style/LoadingIndicator" />

</FrameLayout>
